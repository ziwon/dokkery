root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.sh]
indent_size = 2
indent_style = space

[*.conf]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
